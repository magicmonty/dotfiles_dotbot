pcm.!default {
    type plug
    slave { pcm "pulse" }
}

pcm.pulse {
    type pulse
}

ctl.mixer0 {
    type hw
    card 0
}

pcm.jackmpd {
    type jack
    playback_ports {
      0 system:playback_1
      1 system:playback_2
    }
    capture_ports {
      0 system:capture_1
      1 system:capture_1
    }
}

pcm.jackplugmpd {
    type plug
    slave { pcm "jackmpd" }
    hint {
      description "MPD JACK Audio connection kit"
    }
}

pcm.jackplugmpv {
    type plug
    slave { pcm "jackmpv" }
}

pcm.jackmpv {
    type jack
    playback_ports {
      0 system:playback_1
      1 system:playback_2
    }
}
