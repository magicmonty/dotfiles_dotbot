[
  {
    "defaults": {
      "link": {
        "create": true,
        "relink": true,
        "force": true
      }
    }
  },
  {
    "shell": [
      ["chmod +x ~/.dotfiles/arch/set_zsh", "making set_zsh executable" ],
      {
        "command": "~/.dotfiles/arch/set_zsh",
        "description": "Making ZSH the default shell and install Oh My Zsh",
        "stdin": true,
        "stdout": true,
        "stderr": true
      },
      ["~/.dotfiles/scripts/shortcuts.sh", "Create shortcuts"]
    ]
  },
  {
    "link": {
      "~/.zshrc": "shells/zsh/.zshrc",
      "~/.zprofile": "shells/profile"
    }
  }
]
