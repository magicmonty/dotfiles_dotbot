snippet ll "live loop"
(defn ${1:name} [metro ps ds]
  (let [beat (metro)]
    (at (+ (now) (first ds)) (${2:play} (first ps)))
    (apply-by (metro (inc beat)) #'$1 [metro (rotate 1 ps) (rotate 1 ds)])))

(comment
(at (${3:metro} (+ ($3) 2)) ($1 $3 [$4] [$5]))$0
)
endsnippet

snippet sll "simple live loop"
(defn ${1:name} [metro]
  (let [beat (metro)]
