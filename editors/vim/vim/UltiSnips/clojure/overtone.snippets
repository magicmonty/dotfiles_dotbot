snippet temprec "Simple temporal recursion"
(defn ${1:name} [metro t beat]
  (at t
    (let [next-beat (+ beat 1)
          next-t (+ t (mspb metro))]
      $0
      (apply-by next-t #'$1 [metro next-t next-beat]))))

(comment
($1 metro (atbeat metro 1) 0)
)
endsnippet

snippet fullbeatmap "part for a temporal recursion"
