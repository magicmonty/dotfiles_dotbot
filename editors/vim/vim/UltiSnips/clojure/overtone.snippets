snippet ploop "patterned loop"
(def $1-pattern ${2:(euclid-rhythm 5)})

(defn $1 [m beat durs]
  (let [next-beat (+ beat (reduce + durs))]
    (dorun
     (map
      (fn [d o]
        (let [b (+ beat o)]
          (at (m b)
              $0)))
      durs
      (calc-offsets durs)))
    (apply-by (m next-beat) #'$1 [m next-beat $1-pattern])))

(comment
($1 metro (next-bar metro ${3:4}) $1-pattern)
)
endsnippet

