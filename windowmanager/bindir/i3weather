#!/bin/bash

### This is only if your location isn't automatically detected, otherwise you can leave it blank.
location="Darmstadt"
bgcolor="#282828"

[[ "$location" != "" ]] && location="~${location// /+}"

curl -s wttr.in/$location > ~/.weatherreport
ping -q -w 1 -c 1 `ip r | grep default | cut -d ' ' -f 3` >/dev/null || exit

case $BLOCK_BUTTON in
  1) /usr/bin/termite -e ~/bin/popweather & disown ;;
esac

RAIN=$(cat ~/.weatherreport | sed '16q;d' | sed -e 's/[^m]*m//g' | grep -o "[0-9]*%" | sort -n | sed -e '$!d' | sed -e "s/^/Óçº /g")
TEMP=$(cat ~/.weatherreport | sed '13q;d' | sed -e 's/[^m]*m//g;s/[^0-9]/ /g;s/ /\n/g;/^s*$/d' | grep [0-9] | sort -n | sed -e 1b -e '$!d' | tr '\n' ' ' | awk '{print "  Ô£á "$1"¬∞C - "$2 "¬∞C"}')

echo "<span color=\"$bgcolor\" background=\"#b8bb26\">ÓÇ≤</span><span background=\"$bgcolor\" color=\"#EBDBB2\"> $RAIN$TEMP </span>"
